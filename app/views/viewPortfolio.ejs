<%- include('partials/header') %> 
<aside class="right-side">
    <section class="content-header">
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <i class="fa fa-dashboard"></i>
                    Home
                </a>
            </li>
            <li class="active">
             Portfolio
            </li>
        </ol>
    </section><hr>
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">View Details</h3>
                    </div>
                    <form method="post" >
                        <input type="hidden" name="id" value="<%= values.id %>">

                        <div class="box-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Project Category</label>
                                <select class="form-control" name="proj_category" readonly>
                  
                                    <%
                                    var options = ["APP_Development", "Web_Application", "Window_Application" ];
                                    <!-- for ( var i = 0; i < options.length; i++ ) -->
                                    <!-- { -->
                                        var isSelected = ( values.proj_category == options[0] ) ? "selected" : "";
                                    %>  
                                        <option value="<%=options[0]%>" <%=isSelected %>>
                                            <%= options[0] %>
                                        </option>
                                    <%
                                    <!-- } -->
                                    %>
                                  </select>
                                
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Project Name</label>
                                <input type="text" class="form-control" name="proj_name" value="<%= values.proj_name %>" readonly >
                               
                                 </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Project image</label>
                                <input type="text" class="form-control" name="proj_image" value="<%= values.proj_image %>"readonly>
                             
                                 </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Project Title</label>
                                <input type="text" class="form-control" name="proj_title" value="<%= values.proj_title %>"readonly>
                               
                                 </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Project Website URL</label>
                                <input type="text" class="form-control" name="proj_website" value="<%= values.proj_website %>" readonly>
                               
                                 </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Project Date</label>
                                <input type="date" class="form-control" name="proj_date" value="<%= values.proj_date %>" readonly>
                            
                               
                                </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Project Description</label>
                                <textarea class="form-control" maxlength="255" rows="4" cols="20" style="height: 100%!important;" name="proj_desc" readonly ><%= values.proj_desc %></textarea>
                              
                                 </div>
                            <div class="box-footer">
                                
                                  <a href="/portfolio"><input class="btn btn-warning"  type="button" style="padding: 5px 10px;
                                   font-size: 18px;" value="Cancel">  </a>         
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </section>


</body>
</html>
